// ðŸ”¥ TOTAL MONEY FROM SALES
Total Sales = SUM(Sales[Amount])

// ðŸ”¥ TOTAL PROFIT MADE  
Total Profit = SUM(Sales[Profit])

// ðŸ”¥ PROFIT PERCENTAGE
Profit Margin % = DIVIDE([Total Profit], [Total Sales], 0)

// ðŸ”¥ HOW MANY DIFFERENT CUSTOMERS
Customer Count = DISTINCTCOUNT(Sales[Customer])

// ðŸ”¥ AVERAGE MONEY PER ORDER
Average Order Value = 
DIVIDE([Total Sales], DISTINCTCOUNT(Sales[OrderID]), 0)
